<div class="container">
   
   <form class="signup-form" action="/api/users" method="post">
    <h2 class="signup-form-heading">Sign Up</h2>
    <div>
      <label for="user[username]">Username</label>
      <input class="form-control" type="text" name="user[username]" value="<%= params[:username] %>"/>
    </div>

    <div>
      <label for="user[first_name]">First Name</label>
      <input class="form-control" type="text" name="user[first_name]" value="<%= params[:first_name] %>"/>
    </div>

    <div>
      <label for="user[last_name]">Last Name</label>
      <input class="form-control" type="text" name="user[last_name]" value="<%= params[:last_name] %>"/>
    </div>

    <div>
      <label for="user[email]">Email</label>
      <input class="form-control" type="text" name="user[email]" value="<%= params[:email] %>"/>
    </div>

    <div>
      <label for="user[password]">Password</label>
      <input class="form-control" type="password" name="user[password]"/>
    </div>

    <div>
      <label for="user[password_confirmation]">Password Confirmation</label>
      <input class="form-control" type="password" name="user[password_confirmation]"/>
    </div>

    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign Up"/>

  </form>

</div>