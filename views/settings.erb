<%= erb :app_nav %>

<div class="container-fluid">

  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar" role="tablist">
        <li class="nav-item"><a class="nav-link active" href="#Users" aria-controls="home" role="tab" data-toggle="tab">Users <span class="sr-only">(current)</span></a></li>
        <li class="nav-item"><a class="nav-link" href="#Permissions" aria-controls="home" role="tab" data-toggle="tab">Permissions</a></li>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <%= erb :add_user_modal %>
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="Users">
          <h1 class="page-header">Settings</h1>
          <table class="table table-striped">
            <caption>Optional table caption.</caption>
            <thead>
              <tr>
                <th>Id</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
            <% all_users.each do |user| %>
                <tr>
                  <th scope="row"><%= user.id %></th>
                  <td><a href="/api/users/<%= user.id %>" ><%= user.username %></a></td>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.email %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>

        <div role="tabpanel" class="tab-pane" id="Permissions">
          <h1 class="page-header">Permissions</h1>
        </div>
      </div>
      
    </div>
  </div>

</div> <!-- container-fluid -->

<%= erb :footer %>